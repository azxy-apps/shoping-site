{
    "name": "shopping-site",
    "version": "1.0.0",
    "desciption": "A shopping site.",
    "cacheDirectories": [
        "node_modules",
        "client/node_modules"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/azxy-apps/shoping-site.git"
    },
    "scripts": {
        "start": "node dist/server.js",
        "heroku-postbuild": "npm run build-ts && cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
        "client": "cd client && npm start",
        "server": "nodemon dist/server.js",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "dev": "concurrently --kill-others-on-fail \"npm run watch-ts\" \"npm run server\" \"npm run client\"",
        "trigger": "npm run watch-ts | npm run server | npm run client"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [
            "*.test.ts"
        ],
        "delay": "3"
    },
    "dependencies": {
        "@types/chalk": "^2.2.0",
        "@types/debug": "0.0.31",
        "@types/express": "^4.16.0",
        "@types/mongodb": "^3.1.11",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.11.4",
        "@types/shelljs": "^0.8.0",
        "chalk": "^2.4.1",
        "concurrently": "^4.0.1",
        "debug": "^4.0.1",
        "express": "^4.16.3",
        "mongodb": "^3.1.6",
        "morgan": "^1.9.1",
        "nodemon": "^1.18.4",
        "shelljs": "^0.8.2",
        "tslint": "^5.11.0",
        "typescript": "^3.1.1"
    },
    "devDependencies": {}
}
