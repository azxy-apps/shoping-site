{
    "name": "shopping-site-api",
    "version": "1.0.0",
    "desciption": "Shopping site API server.",
    "cacheDirectories": [
        "node_modules"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/azxy-apps/shoping-site.git"
    },
    "scripts": {
        "start": "node dist/server.js",
        "heroku-postbuild": "npm run build",
        "build": "npm run tslint && tsc",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "dev": "nodemon"
    },
    "nodemonConfig": {
        "watch": [
            "src/**.ts"
        ],
        "ext": "ts",
        "exec": "ts-node src/server.ts",
        "ignore": [
            "*.test.ts"
        ],
        "delay": "3"
    },
    "dependencies": {
        "@types/express": "^4.16.0",
        "@types/mongodb": "^3.1.11",
        "@types/mongoose": "^5.2.19",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.11.4",
        "@types/shelljs": "^0.8.0",
        "concurrently": "^4.0.1",
        "express": "^4.16.3",
        "mongodb": "^3.1.6",
        "mongoose": "^5.3.2",
        "morgan": "^1.9.1",
        "nodemon": "^1.18.4",
        "shelljs": "^0.8.2",
        "ts-node": "^7.0.1",
        "typescript": "^3.1.1"
    },
    "devDependencies": {
        "@types/debug": "0.0.31",
        "chalk": "^2.4.1",
        "debug": "^4.1.0",
        "tslint": "^5.11.0"
    }
}
