{
    "name": "shopping-site",
    "version": "1.0.0",
    "desciption": "A shopping site.",
    "cacheDirectories": [
        "node_modules",
        "client/node_modules"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/azxy-apps/shoping-site.git"
    },
    "scripts": {
        "start": "node dist/server.js",
        "heroku-postbuild": "npm run build-server && npm run build-client",
        "build-client": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
        "build-server": "npm run tslint && tsc",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "dev": "concurrently --kill-others-on-fail  \"nodemon\" \"cd client && npm start\""
    },
    "nodemonConfig": {
        "watch": [
            "src/*.ts"
        ],
        "ext": "ts",
        "exec": "ts-node src/server.ts",
        "ignore": [
            "*.test.ts"
        ],
        "delay": "3"
    },
    "dependencies": {
        "@types/chalk": "^2.2.0",
        "@types/debug": "0.0.31",
        "@types/express": "^4.16.0",
        "@types/history": "^4.7.0",
        "@types/mongodb": "^3.1.11",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.11.4",
        "@types/react-redux": "^6.0.9",
        "@types/react-router-dom": "^4.3.1",
        "@types/react-router-redux": "^5.0.16",
        "@types/redux-devtools-extension": "^2.13.2",
        "@types/shelljs": "^0.8.0",
        "chalk": "^2.4.1",
        "concurrently": "^4.0.1",
        "debug": "^4.0.1",
        "express": "^4.16.3",
        "history": "^4.7.2",
        "mongodb": "^3.1.6",
        "morgan": "^1.9.1",
        "node-sass": "^4.9.3",
        "nodemon": "^1.18.4",
        "primeicons": "^1.0.0-beta.10",
        "primereact": "^2.0.0-beta.9",
        "react-redux": "^5.0.7",
        "react-router-redux": "^4.0.8",
        "redux": "^4.0.0",
        "redux-devtools-extension": "^2.13.5",
        "redux-form": "^7.4.2",
        "redux-persist": "^5.10.0",
        "redux-thunk": "^2.3.0",
        "sass-loader": "^7.1.0",
        "shelljs": "^0.8.2",
        "svg-react-loader": "^0.4.5",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typescript": "^3.1.1",
        "typings-for-css-modules-loader": "^1.7.0"
    },
    "devDependencies": {}
}
